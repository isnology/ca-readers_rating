<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image data</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <% if book.image_url.present? %>
            <%= image_tag book.image_url %>
          <% end %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td><%= book.rating %></td>
        <td><%= link_to 'Show', book %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
